<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>ChinaNet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
		<filter-name>struts2</filter-name>
		<filter-class>
			org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	 <filter>
    <filter-name>encodingfilter</filter-name>
    <filter-class>com.javaweb.ch12.filter.EncodingFilter</filter-class>
  </filter>
  <filter>
  <filter-name>firstfilter</filter-name>
  <filter-class>com.javaweb.ch12.filter.FirstFilter</filter-class>
  </filter>
  <filter>
  <filter-name>secondfilter</filter-name>
  <filter-class>com.javaweb.ch12.filter.SecondFilter</filter-class>
  </filter>
  
  <filter-mapping>
    <filter-name>encodingfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>firstfilter</filter-name>
    <url-pattern>/web/*</url-pattern>
  </filter-mapping>
    <filter-mapping>
    <filter-name>secondfilter</filter-name>
    <url-pattern>/web/Charge.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>secondfilter</filter-name>
    <url-pattern>/web/newOperator.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>secondfilter</filter-name>
    <url-pattern>/web/Resource.jsp</url-pattern>
  </filter-mapping>
  
	<!-- web初始化参数 -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:applicationContext.xml</param-value>
	</context-param>
	<!-- Spring配置文件的加载器 -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
</web-app>